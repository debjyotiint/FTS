<link href="~/Scripts/chosen/chosen.min.css" rel="stylesheet" />

<script>


    $(function () {


        $("#drpuser").chosen({
            width: "100%"
        });

        $("#drpstate").chosen({
            width: "100%"
        });




        $('body').on('click', '#btnshow', function () {

            var arr = [];
            $('input.acheckbox:checkbox:checked').each(function () {
                arr.push($(this).val());
            });

            // alert(arr);
            var surl = '@Url.Action("GetCounterlist", "CounterList")';
            var usr = $("#drpuser").val();
            $.ajax({
                url: surl,
                async: false,
                data: {

                    StateId: $('#drpstate').val(),
                    TypeID: arr.toString()
                },
                type: 'POST',

                success: function (data) {

                    $('#refreshgrid').html(data);
                },
                error: function () {

                },
            });

        });



        $('.window .close').click(function (e) {
            //Cancel the link behavior
            e.preventDefault();
            $('#mask').removeClass('showing');
            $('#maskmap').removeClass('showing');
        });





        $('#txtfromDate').daterangepicker({
            autoUpdateInput: false,
            singleDatePicker: true,
            showDropdowns: true,
        }, function (chosen_date) {
            $('#txtfromDate').val(chosen_date.format('DD-MM-YYYY'));
        });


        $('#txttoDate').daterangepicker({
            autoUpdateInput: false,
            singleDatePicker: true,
            showDropdowns: true,
        }, function (chosen_date) {
            $('#txttoDate').val(chosen_date.format('DD-MM-YYYY'));
        });


        var d = new Date();
        var dd = d.getDate();
        var mm = d.getMonth() + 1; //January is 0!
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        var yyyy = d.getFullYear();

        $('#txtfromDate').val(dd + '-' + mm + '-' + yyyy);
        $('#txttoDate').val(dd + '-' + mm + '-' + yyyy);








        $('#ddlAppIds').on('change', function () {
            if ($("#ddlAppIds option:selected").index() > 0) {
                var selectedValue = $(this).val();
                $('#ddlAppIds').prop("selectedIndex", 0);
                ///   $('#reportLink').prop('href', '/Attendance/ExportDesignation?type=' + selectedValue);
                //window.location.href = "/JobDetailsSetup/ExportDesignation?type=" + selectedValue;
                var url = '@Url.Action("ExportCounterlist", "CounterList", new { type = "_type_" })'
                window.location.href = url.replace("_type_", selectedValue);

                var arr = [];
                $('input.acheckbox:checkbox:checked').each(function () {
                    arr.push($(this).val());
                });

                    //  alert($("#drpuser").val());
                         var surl = '@Url.Action("ExportCounterlist", "CounterList")';
                    var usr = $("#drpuser").val();
                    $.ajax({

                        url: surl,
                        async: false,

                        data: {
                            StateId: $('#drpstate').val(),
                            TypeID: arr.toString()
                        },

                        type: 'POST',
                        success: function (data) {
                            $('#refreshgrid').html(data);
                        },

                        error: function () {

                        },

                    });

            }
        });


    });

</script>


